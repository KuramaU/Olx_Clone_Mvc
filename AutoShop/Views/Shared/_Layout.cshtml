@using Shop.Services;
@inject ICartService cartService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bag shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="icon" href="~/icons8-shopping-bag-96-orange.png"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">



</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand cart-link" asp-area="" asp-controller="CategoriesMenu" asp-action="Index">Bag</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                    

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Каталог</a>
                        </li>
                        @if ( User.IsInRole( "User"))
                                                {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Products" asp-action="Index"><img width="30px" height="30px" src="~/box.png" /></a>
                            </li>
                        }
                        @if (User.IsInRole("Administrator"))
                        {
                            
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Products" asp-action="Index">Товари користувачів</a>
                                </li>
                        }
                         @if (User.IsInRole("Administrator"))
                         {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Users" asp-action="Index">Користувачі</a>
                        </li>
                         }
                        
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart"></i>
                                <span class="position-absolute cart-badge translate-middle badge rounded-pill bg-primary">
                                    @cartService.GetCount()
                                </span>
                                </a>
                        </li>
               
                            @* <form asp-controller="Home" asp-action="Index" class="form-inline">
                                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="SearchString">
                            </form> *@
                      
                       
                        </ul>
                 

                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="text-end">

                            <a asp-controller="Products" asp-action="Create" class="button-4" role="button">Додати оголошення</a>
                        </div>
                    }
                    else
                    {

                        <div class="text-end">
                            <a id="login" asp-area="Identity" asp-page="/Account/Login" class="button-4" role="button">Додати оголошення</a>
                           
                        </div>
                    }
                
                   
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
       @*  <div class="search-container">
            <form asp-controller="Home" asp-action="Index" class="form-inline">
                <div class="input-group">
                    <input class="form-control" type="search" placeholder="Search" aria-label="Search" name="SearchString">
                    <button type="submit" class="btn btn-outline-secondary">
                        <i class="bi bi-search"></i> <!-- Иконка лупы из Bootstrap Icons -->
                    </button>
                </div>
            </form>
        </div> *@
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <footer class="border-top footer text-muted custom-footer">
        <div class="container">
            <div class="row mt-3">
                <!-- Колонка 1 -->
                <div class="col-md-4">
                    <ul class="list-unstyled">
                        <li><a href="#">Мобільні додатки</a></li>
                        <li><a href="#">Допомога та Зворотній зв'язок</a></li>
                        <li><a href="#">Платні послуги</a></li>
                        <li><a href="#">Бізнес на bag</a></li>
                        <li><a href="#">Блог bag</a></li>
                    </ul>
                </div>

                <!-- Колонка 2 -->
                <div class="col-md-4">
                    <ul class="list-unstyled">
                        <li><a href="#">Умови користування</a></li>
                        <li><a href="#">Політика конфіденційності</a></li>
                        <li><a href="#">Реклама на сайті</a></li>
                        <li><a href="#">Для преси</a></li>
                        <li><a href="#">Як продавати й купувати?</a></li>
                    </ul>
                </div>

                <!-- Колонка 3 -->
                <div class="col-md-4">
                    <ul class="list-unstyled">
                        <li><a href="#">Правила безпеки</a></li>
                        <li><a href="#">Карта сайту</a></li>
                        <li><a href="#">Карта регіонів</a></li>
                        <li><a href="#">Популярні запити</a></li>
                        <li><a href="#">Робота в Bag</a></li>
                        <li><a href="#">Bag доставка</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>





    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
