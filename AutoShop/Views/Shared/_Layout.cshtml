@using Shop.Services;
@inject ICartService cartService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bag shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="icon" href="~/icons8-shopping-bag-96-orange.png"/>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Bag</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="CategoriesMenu" asp-action="Index">Категорії</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Каталог</a>
                        </li>
                        @if ( User.IsInRole( "User"))
                                                {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Products" asp-action="Index">Мої оголошення</a>
                            </li>
                        }
                        @if (User.IsInRole("Administrator"))
                        {
                            
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Products" asp-action="Index">Товари користувачів</a>
                                </li>
                        }
                         @if (User.IsInRole("Administrator"))
                         {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Users" asp-action="Index">Користувачі</a>
                        </li>
                         }
                        
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart"></i>
                                <span class="position-absolute cart-badge  translate-middle badge rounded-pill bg-primary">
                                    @cartService.GetCount()
                                </span>
                                </a>
                        </li>
               
                            <form asp-controller="Home" asp-action="Index" class="form-inline">
                                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Пошук" name="SearchString">
                            </form>
                      
                       
                        </ul>
                    <div class="text-end">
                        <button class="button-4" role="button">Додати оголошення</button>
                    </div>
                        <partial name="_LoginPartial"/>
                         
                    
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted fixed-bottom">
        <div class="container">
            &copy; 2023 - all rights reserved - <a asp-area="" asp-controller="Home" asp-action="Privacy">Політика сайту</a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
